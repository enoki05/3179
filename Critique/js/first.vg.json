{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": null,
  "width": 550,
  "height": 400,
  "config": {
    "font": "DejaVu Sans Mono",
    "axis": {
      "labelFontSize": 11,
      "titleFontSize": 13,
      "labelFontWeight": "normal",
      "titleFontWeight": "bold"
    },
    "view": {
      "stroke": null
    },
    "style": {
      "tooltip": {
        "font": "DejaVu Sans Mono",
        "fontSize": 12,
        "fontWeight": "normal"
      }
    }
  },
  "data": {
    "url": "https://raw.githubusercontent.com/enoki05/3179/refs/heads/main/Employed_By_Region.csv"
  },
  "params": [
    {
      "name": "state_click",
      "value": {"state_code": "1"}
    }
  ],
  "transform": [
    {
      "fold": [
        "17/07/2020", "17/07/2021", "17/07/2022",
        "17/07/2023", "17/07/2024", "17/07/2025"
      ],
      "as": ["Year", "Rating"]
    },
    {
      "calculate": "substring(datum.Year, 6, 10)",
      "as": "YearLabel"
    },
    {
      "calculate": "toNumber(datum.Rating)",
      "as": "RatingNumeric"
    },
    {
      "calculate": "substring(datum['SA4 Code'], 0, 1)",
      "as": "state_code"
    },
    {
      "filter": "state_click.state_code == datum.state_code"
    }
  ],
  "mark": {
    "type": "rect",
    "stroke": "white",
    "strokeWidth": 1.5
  },
  "encoding": {
    "x": {
      "field": "YearLabel",
      "type": "ordinal",
      "title": "Year",
      "axis": {
        "labelAngle": -45,
        "labelFontSize": 11,
        "titleFontWeight": "bold",
        "titleFontSize": 13,
        "labelPadding": 5
      }
    },
    "y": {
      "field": "SA4 NAME",
      "type": "nominal",
      "title": "Region",
      "axis": {
        "labelLimit": 180,
        "labelFontSize": 10,
        "titleFontWeight": "bold",
        "titleFontSize": 13,
        "titleAlign": "right",
        "titleAngle": 0,
        "titleX": -5,
        "titleY": -10
      }
    },
    "color": {
      "field": "RatingNumeric",
      "type": "quantitative",
      "scale": {
        "scheme": "greens",
        "domain": [1, 5]
      },
      "legend": {
        "title": "Labour Market Rating",
        "orient": "right",
        "direction": "vertical",
        "titleAnchor": "start",
        "offset": 5,
        "titleFontSize": 11,
        "labelFontSize": 10
      }
    },
    "tooltip": [
      {"field": "SA4 NAME", "type": "nominal", "title": "Region"},
      {"field": "YearLabel", "type": "nominal", "title": "Year"},
      {"field": "RatingNumeric", "type": "quantitative", "title": "Rating", "format": ".2f"}
    ]
  }
}